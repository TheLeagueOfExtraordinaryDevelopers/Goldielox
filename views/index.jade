extends layout

block content

  span#trackName
  br

  button#playPause(onclick="return playPause()" style="width: 50px") Play

  &nbsp;
  span#trackHead(style="width:50px; display: inline-block; text-align: right;") 0:00

  &nbsp;
  input(type="range" style="width: 300px" value=0)#progress-slider

  &nbsp;
  span#duration(style="width:50px; display: inline-block; text-align: left;") 0:00

  input(type="range" style="width: 77px" max=1 step=.01 value=1)#volume-slider

  ul
    each track in tracks
      li
        a(href=track.path onclick='return play(this)')= track.name

  include player.ejs
